<p id="notice"><%= notice %></p>

<h1>Car Makes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @car_makes.each do |car_make| %>
      <tr>
        <td><%= car_make.name %></td>
        <td><%= link_to 'Show', car_make %></td>
        <td><%= link_to 'Edit', edit_car_make_path(car_make) %></td>
        <td><%= link_to 'Destroy', car_make, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

